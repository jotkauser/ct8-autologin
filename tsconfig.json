{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"outDir": "./dist",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"sourceMap": true,
	},
	"include": [
		"**.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}